{
  "family": "bhashamitra",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::239408179735:role/bhashamitra-ecs-task-execution-role",
  "taskRoleArn": "arn:aws:iam::239408179735:role/bhashamitra-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "bhashamitra-app",
      "image": "PLACEHOLDER_IMAGE_URI",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/actuator/health/liveness || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:secretsmanager:us-west-1:239408179735:secret:bhashamitra/app/credentials-b2BrLz:host::"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:secretsmanager:us-west-1:239408179735:secret:bhashamitra/app/credentials-b2BrLz:port::"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "arn:aws:secretsmanager:us-west-1:239408179735:secret:bhashamitra/app/credentials-b2BrLz:dbname::"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:us-west-1:239408179735:secret:bhashamitra/app/credentials-b2BrLz:username::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-west-1:239408179735:secret:bhashamitra/app/credentials-b2BrLz:password::"
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "production"
        },
        {
          "name": "COGNITO_CLIENT_ID",
          "value": "7cdbeojvue3dmmlks8qf3hf3gj"
        },
        {
          "name": "COGNITO_USER_POOL_ID",
          "value": "us-west-1_EAIAbURr1"
        }
      ],


      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/bhashamitra",
          "awslogs-region": "us-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true
    }
  ]
}
